<style>
  .ttcms-countdown .banner-inner .title {color: {{section.settings.banner_title_color }};}   
  .ttcms-countdown .banner-inner .subtitle {color: {{section.settings.banner_subtitle_color }};}  	  
  .ttcms-countdown .banner-inner .btn {color: {{section.settings.btn_txt_color }}; background:{{ section.settings.btn_bg_color }};}
  .ttcms-countdown .banner-inner .btn:hover {color: {{section.settings.btn_txt_hover_color }};}
  .ttcms-countdown .banner-inner .btn::after {background:{{ section.settings.btn_bg_hover_color }}; }    
  .ttcms-countdown .banner-inner .countdown-num,
  .ttcms-countdown .banner-inner .countdown-timer:not(:last-child):after{color: {{section.settings.countdown_num_color }};}
  .ttcms-countdown .banner-inner .main-countdown .countdown-display .countdown-timer .text{
    color: {{section.settings.countdown_text_color }};
  }
</style>    
<div class="ttcms-countdown bg_img1" data-section-id="{{ section.id }}" data-aos="fade-up">
  <div class="bg_img2 countdown-bg {% if section.settings.parallax_enable %} parallex {% endif %}" data-source-url="{{ section.settings.parallax_img | img_url: 'master' }}" style="background-color:{{section.settings.bg_color}};background-image:url('{{ section.settings.parallax_img | img_url: 'master' }}'); {% if section.settings.parallax_enable %} background-position: 50% 65.8718%; {% else %} background-size: contain; {% endif %}">       
      <div class="container">
        <div class="banner-inner">
          {% if section.settings.banner_subtitle != blank %}<div class="subtitle">{{ section.settings.banner_subtitle }}</div>{% endif %}
          {% if section.settings.banner_title != blank %}<div class="title">{{ section.settings.banner_title }}</div>{% endif %}   
          {% if section.settings.seperator != blank %}
          <div class="seperator">
            <img width="163" height="21" src="{{ section.settings.seperator | img_url:"163x21" }}" alt="seperator"></div>
          {% endif %}
          {% if section.settings.last_date != blank %}
          <div class="main-countdown">
            <div class="countdown-display">
              <div class="countdown-timer">
                <span class="countdown-num days">00</span>
                <span class="text">DAYS</span>
              </div>
              <div class="countdown-timer">
                <span class="countdown-num hour">00</span>
                <span class="text">HOUR</span>
              </div>
              <div class="countdown-timer">
                <span class="countdown-num min">00</span>
                <span class="text">MINUTES</span>
              </div>
              <div class="countdown-timer">
                <span class="countdown-num sec">00</span>
                <span class="text">SECONDS</span>
              </div>
            </div>
          </div>
          {% endif %}        
          {% if section.settings.btn_text != blank %}
          <div class="ttbanner-btn">
            <a href="{% if section.settings.banner_url != blank %}{{ section.settings.banner_url }}{% else %}#{% endif %}" class="btn">{{ section.settings.btn_text }}</a>
          </div>
          {% endif %}
        </div>
      </div>
  </div>
</div>
<script>
  var second = 1000,
      minute = second * 60,
      hour = minute * 60,
      day = hour * 24;
  var countDown = new Date('{{ section.settings.last_date }}').getTime(),
                           x = setInterval(function() {
    var now = new Date().getTime(),
        distance = countDown - now;
    document.querySelector('.days').innerText = Math.floor(distance / (day)),
      document.querySelector('.hour').innerText = Math.floor((distance % (day)) / (hour)),
      document.querySelector('.min').innerText = Math.floor((distance % (hour)) / (minute)),
      document.querySelector('.sec').innerText = Math.floor((distance % (minute)) / second);
  }, second)
</script>
