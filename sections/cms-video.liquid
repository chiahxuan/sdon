<style>.videoparallax .video-img .video-detail .title
  {color: {{ section.settings.title_color }};}
  .videoparallax .video-img .video-detail .subtitle
  {color: {{ section.settings.subtitle_color }};}
  .videoparallax .video-featured #popup_toggle .play-icone i{ 
    background: {{ section.settings.video_btn_bg_color }};
  }
  .videoparallax .video-featured #popup_toggle .play-icone:hover i{ 
    background: {{ section.settings.video_btn_bg_hover_color }};
  }
  .videoparallax .video-featured #popup_toggle .play-icone i.mdi-play-circle{ 
    color: {{ section.settings.video_btn_color }};
  }
  .videoparallax .video-featured #popup_toggle .play-icone:hover i.mdi-play-circle{ 
    color: {{ section.settings.video_btn_hover_color }};
  }
</style>
<script>
  $("#playvideo").one(function(){
    //as noted in addendum, check for querystring exitence
    var symbol = $("#youtubeVideo")[0].src.indexOf("?") > -1 ? "&" : "?";
    //modify source to autoplay and start video
    $("#youtubeVideo")[0].src += symbol + "autoplay=1";
  });
</script>
<div class="videoparallax" data-section-id="{{ section.id }}" >
  <div class="pattern video-img{% if section.settings.parallax_enable %} parallex {% endif %}" data-source-url="{{ section.settings.image | img_url: 'master' }}" style="background-color:{{section.settings.bg_color}};background-image:url('{{ section.settings.image | img_url: 'master' }}'); {% if section.settings.parallax_enable %} background-position: 50% 65.8718%; {% else %} background-size: contain; {% endif %}">
    <div class="container">     
      <div class="video-detail col-sm-5 col-xs-12" data-aos="fade-up">          
        {% if section.settings.subtitle != blank %}
        <div class="subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}
        {% if section.settings.title != blank %}
        <div class="title">{{ section.settings.title }}</div>
        {% endif %} 
        {% if section.settings.seperator != blank %}
        <div class="seperator">
          <img width="163" height="21" src="{{ section.settings.seperator | img_url:"163x21" }}" alt="seperator"></div>
        {% endif %}
        <div class="video-featured">
          <div id="popup_toggle"><a href="#">{% if section.settings.video_img != blank %}{{ section.settings.video_img | img_url: "master" | img_tag: 'video_img' }}{% endif %}</a>
            <span id="playVideo" class="play-icone"><i class="mdi mdi-play-circle" aria-hidden="true"></i></span>
          </div>
          <div class="popup_overlay">
            <div class="popup" id="popupVid"><a class="popup_close">X</a>
              <div class="video-wrapper"><iframe id="youtubeVideo" width="560" height="315" src="{{ section.settings.video_url }}" frameborder="0" ></iframe></div>
            </div>
          </div>
        </div>
      </div>    
    </div>
  </div>
</div>
{{ 'parallax.min.js' | asset_url | script_tag }}
