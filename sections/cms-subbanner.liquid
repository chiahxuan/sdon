<style>
  .cmssubbanner .subbanner.subbanner1 .subbanner-content .title{
    color:{{ section.settings.banner1_title_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.top-banner .title{
    color:{{ section.settings.banner2_title_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.bottom-banner .title{
    color:{{ section.settings.banner3_title_color}};
  }
  .cmssubbanner .subbanner.subbanner3 .subbanner-content .title{
    color:{{ section.settings.banner4_title_color}};
  }  
  .cmssubbanner .subbanner.subbanner1 .subbanner-content .subtitle{
    color:{{ section.settings.banner1_subtitle_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.top-banner .subtitle{
    color:{{ section.settings.banner2_subtitle_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.bottom-banner .subtitle{
    color:{{ section.settings.banner3_subtitle_color}};
  }
  .cmssubbanner .subbanner.subbanner3 .subbanner-content .subtitle{
    color:{{ section.settings.banner4_subtitle_color}};
  }
  .cmssubbanner .subbanner.subbanner1 .subbanner-content .ttbanner-btn{
    color:{{ section.settings.btn1_txt_color}};background:{{ section.settings.btn1_bg_color}};
  }
  .cmssubbanner .subbanner.subbanner1 .subbanner-content .ttbanner-btn:hover,
  .cmssubbanner .subbanner.subbanner1 .subbanner-content .ttbanner-btn:focus{
    color:{{ section.settings.btn1_txt_hover_color}};
  }
  .cmssubbanner .subbanner.subbanner1 .subbanner-content .ttbanner-btn::after{
    background:{{ section.settings.btn1_bg_hover_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.top-banner .ttbanner-btn{
    color:{{ section.settings.btn2_txt_color}};background:{{ section.settings.btn2_bg_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.top-banner .ttbanner-btn:hover,
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.top-banner .ttbanner-btn:focus{
    color:{{ section.settings.btn2_txt_hover_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.top-banner .ttbanner-btn::after{
    background:{{ section.settings.btn2_bg_hover_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.bottom-banner .ttbanner-btn{
    color:{{ section.settings.btn3_txt_color}};background:{{ section.settings.btn3_bg_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.bottom-banner .ttbanner-btn:hover,
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.bottom-banner .ttbanner-btn:focus{
    color:{{ section.settings.btn3_txt_hover_color}};
  }
  .cmssubbanner .subbanner.subbanner2 .subbanner-content.bottom-banner .ttbanner-btn::after{
    background:{{ section.settings.btn3_bg_hover_color}};
  }
  .cmssubbanner .subbanner.subbanner3 .subbanner-content .ttbanner-btn{
    color:{{ section.settings.btn4_txt_color}};background:{{ section.settings.btn4_bg_color}};
  }
  .cmssubbanner .subbanner.subbanner3 .subbanner-content .ttbanner-btn:hover,
  .cmssubbanner .subbanner.subbanner3 .subbanner-content .ttbanner-btn:focus{
    color:{{ section.settings.btn4_txt_hover_color}};
  }
  .cmssubbanner .subbanner.subbanner3 .subbanner-content .ttbanner-btn::after{
    background:{{ section.settings.btn4_bg_hover_color}};
  }
</style>
<div class="cmssubbanner col-sm-12 col-xs-12" data-aos="fade-up">
  <div class="subbanner subbanner1 col-sm-4 col-xs-12">
    {% if section.settings.banner1_img != blank %}
    <a href="{% if section.settings.banner1_url != blank %}{{ section.settings.banner1_url }}{% else %}#{% endif %}">
      <img width="600" height="650" src="{{ section.settings.banner1_img | img_url:"600x650" }}" alt="banner1">
      <div class="subbanner-content left-banner {{ section.settings.text1_position }}">   
        {% if section.settings.banner1_subtitle != blank %}<div class="subtitle">{{ section.settings.banner1_subtitle }}</div>{% endif %}              
        {% if section.settings.banner1_title != blank %}<div class="title">{{ section.settings.banner1_title }}</div>{% endif %}                        
        {% if section.settings.btn1_text != blank %}
        <div class="ttbanner-btn btn" href="{{ section.settings.btn_link1 }}">{{ section.settings.btn1_text }}</div>
        {% endif %}     
      </div>
    </a>
    {% endif %}
  </div>
  <div class="subbanner subbanner2 col-sm-4 col-xs-12">
    <div class="banner1 col-sm-12">
      {% if section.settings.banner2_img != blank %}
      <a href="{% if section.settings.banner2_url != blank %}{{ section.settings.banner2_url }}{% else %}#{% endif %}">
        <img width="600" height="310" src="{{ section.settings.banner2_img | img_url:"600x310" }}" alt="banner2">
        <div class="subbanner-content top-banner {{ section.settings.text2_position }}">
          <div class="banner-inner">  
            {% if section.settings.banner2_subtitle != blank %}<div class="subtitle">{{ section.settings.banner2_subtitle }}</div>{% endif %}              
            {% if section.settings.banner2_title != blank %}<div class="title">{{ section.settings.banner2_title }}</div>{% endif %}              
            {% if section.settings.btn2_text != blank %}
            <div class="ttbanner-btn btn" href="{{ section.settings.btn_link2 }}">{{ section.settings.btn2_text }}</div>
            {% endif %}
          </div>
        </div>
      </a>
      {% endif %}
    </div>
    <div class="banner2 col-sm-12">
      {% if section.settings.banner3_img != blank %}
      <a href="{% if section.settings.banner3_url != blank %}{{ section.settings.banner3_url }}{% else %}#{% endif %}">
        <img width="600" height="310" src="{{ section.settings.banner3_img | img_url:"600x310" }}" alt="banner3">
        <div class="subbanner-content bottom-banner {{ section.settings.text3_position }}">
          <div class="banner-inner">  
            {% if section.settings.banner3_subtitle != blank %}<div class="subtitle">{{ section.settings.banner3_subtitle }}</div>{% endif %}              
            {% if section.settings.banner3_title != blank %}<div class="title">{{ section.settings.banner3_title }}</div>{% endif %}              
            {% if section.settings.btn3_text != blank %}
            <div class="ttbanner-btn btn" href="{{ section.settings.btn_link3 }}">{{ section.settings.btn3_text }}</div>
            {% endif %}
          </div>
        </div>
      </a>
      {% endif %}
    </div>
  </div>
  <div class="subbanner subbanner3 col-sm-4 col-xs-12">
    {% if section.settings.banner4_img != blank %}
    <a href="{% if section.settings.banner4_url != blank %}{{ section.settings.banner4_url }}{% else %}#{% endif %}">
      <img width="600" height="650" src="{{ section.settings.banner4_img | img_url:"600x650" }}" alt="banner4">
      <div class="subbanner-content right-banner {{ section.settings.text4_position }}">
        {% if section.settings.banner4_subtitle != blank %}<div class="subtitle">{{ section.settings.banner4_subtitle }}</div>{% endif %}              
        {% if section.settings.banner4_title != blank %}<div class="title">{{ section.settings.banner4_title }}</div>{% endif %}              
        {% if section.settings.btn4_text != blank %}
        <div class="ttbanner-btn btn" href="{{ section.settings.btn_link4 }}">{{ section.settings.btn4_text }}</div>
        {% endif %}   
      </div>
    </a>
    {% endif %}
  </div>
</div>
